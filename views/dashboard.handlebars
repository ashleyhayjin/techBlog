<h1>Hello, {{username}}. Welcome in.</h1>

<button type="submit" class="btn"><a class ="link" style="color: #065b83" href="/newPost">New Post</a></button>

{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.username}} on {{post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.words}}
    </p>
  </div>
</div>
{{/each}}
