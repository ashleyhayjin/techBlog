{{#each posts as |post| }}

<div class="row mb-4 project">
  <div class="col-md-5 card">
    <h2>
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{user.username}} </p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.words}}
    </p>
  </div>
</div>
{{/each}}
