<div class="card">
  <div class="card-header">
    <h2 style="color:#065b83">Hey, {{username}}!</h2>
  </div>
  <form class="card-body" id="edit-post">
    <label for="edit-title" class="form-label" style="color:#065b83">Title</label>
    <input class="edit-title" type="text" id="edit-title" name="edit-content" value="{{post.title}}"/>
    <label for="edit-content" class="form-label content-label" style="color:#065b83"></label>
    <input class="edit-input content-label" size="120" min="10" max="150" type="text" id="edit-content" name="edit-content" value="{{post.words}}"/>
    <button type="submit" class="button-for-create">Submit</button>
  </form>
</div>

<script src="/js/editPost.js"></script>
