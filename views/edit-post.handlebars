<div class="card">
  <form class="card-body" id="edit-post">
    <label for="post-title" class="form-label" style="color:#065b83">Title</label>
    <input class="post-title" type="text" id="post-title" name="post-content" value="{{posts.title}}"/>
    <label for="post-content" class="form-label content-label" style="color:#065b83">Words</label>
    <input class="post-input content-label" size="120" min="10" max="150" type="text" id="post-content" name="post-content" value="{{posts.words}}"/>
    <button type="submit" class="button-for-create">Submit</button>
    <button id="deletePost">Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>